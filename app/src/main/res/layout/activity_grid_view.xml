<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GridViewActivity"
    android:background="@drawable/bgcolor">


    <GridView
        android:id="@+id/GVfruits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="23dp"
        android:numColumns="3"
        android:verticalSpacing="23dp"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:onClick="goBackOnClick"
        android:text="@string/go_back"
        app:layout_constraintBottom_toBottomOf="@+id/GVfruits"
        app:layout_constraintEnd_toEndOf="@+id/GVfruits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="150dp"
        tools:ignore="MissingConstraints"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>